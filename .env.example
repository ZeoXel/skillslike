# API Keys
ANTHROPIC_API_KEY=your-api-key-here
ANTHROPIC_BASE_URL=  # Optional: custom Anthropic API endpoint

# OpenAI compatibility (for third-party providers like bltcy.ai)
OPENAI_API_KEY=your-openai-key-here
OPENAI_BASE_URL=  # e.g., https://api.bltcy.ai/v1
USE_OPENAI_COMPATIBLE=false  # Set to true to use OpenAI-compatible endpoint

# LangSmith (optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-key-here
